<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".admin.EditUserModeActivity">

    <TextView
        android:id="@+id/edit_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rubik"
        android:text="@string/title_edit_mode"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="TextContrastCheck" />

    <Spinner
        android:id="@+id/spinnerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_mode_text"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:foreground="@drawable/design_text_fiend"
        android:padding="3dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/surnameE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerUser"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_surname"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/nameE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameE"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/patronymicE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameE"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_patronymic"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/loginE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patronymicE"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_login"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/passwordE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginE"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/spinnerRoleUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordE"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:foreground="@drawable/design_text_fiend"
        android:padding="3dp"/>

    <Spinner
        android:id="@+id/spinnerGroupUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerRoleUser"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:foreground="@drawable/design_text_fiend"
        android:padding="3dp"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/spinnerEditMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerGroupUser"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_color"
        android:foreground="@drawable/design_text_fiend"
        android:padding="3dp"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/rubik"
        android:letterSpacing="0"
        android:padding="10dp"
        android:text="@string/button_save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/button_color"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>