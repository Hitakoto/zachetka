<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".admin.EditUserActivity">

    <TextView
        android:id="@+id/edit_mode_text_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rubik"
        android:text="@string/title_red_mode"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="TextContrastCheck" />

    <Spinner
        android:id="@+id/spinnerUserEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_mode_text_edit"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/surnameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerUserEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_surname"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/patronymicEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_patronymic"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/loginEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patronymicEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_login"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/design_text_fiend"
        android:ems="10"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:fontFamily="@font/rubik"
        android:textColorHint="@color/button_color"
        android:textColor="@color/button_color"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/spinnerRoleUserEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/passwordEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:padding="3dp"
        android:spinnerMode="dropdown"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinnerGroupUserEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/spinnerRoleUserEdit"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:spinnerMode="dropdown"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/button_color"
        android:fontFamily="@font/rubik"
        android:letterSpacing="0"
        android:padding="10dp"
        android:text="@string/button_save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/button_color"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>